    </condition>
  </animation>

  <!--Pylon 3L-->
  <animation>
    <type>select</type>
    <object-name>ARM-3L</object-name>
    <condition>
      <and>
        <greater-than>
          <property>sim/weight[2]/weight-lb</property>
          <value>1</value>
        </greater-than>
        <not>
          <equals>
            <property>sim/weight[2]/selected</property>
            <value>1300 l Droptank</value>
          </equals>
        </not>
        <not>
          <equals>
            <property>sim/weight[2]/selected</property>
            <value>1700 l Droptank</value>
          </equals>
        </not>
