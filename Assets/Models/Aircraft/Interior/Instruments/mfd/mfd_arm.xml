    <object-name>ARM-3R-t1700</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.5 </red>
      <green> 0.5 </green>
      <blue>  0.5 </blue>
    </emission>
    <ambient>
      <factor-prop>instrumentation/mfd/dimm-r</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </ambient>
    <diffuse>
      <factor-prop>instrumentation/mfd/dimm-r</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </diffuse>
    <specular>
      <factor-prop>instrumentation/mfd/dimm-r</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </specular>
  </animation>

  <!--Pylon 1L-->
  <animation>
    <type>select</type>
    <object-name>ARM-1L</object-name>
    <condition>
      <greater-than>
        <property>sim/weight/weight-lb</property>
        <value>1</value>
      </greater-than>
    </condition>
  </animation>

  <!--Pylon 2L-->
  <animation>
    <type>select</type>
    <object-name>ARM-2L</object-name>
