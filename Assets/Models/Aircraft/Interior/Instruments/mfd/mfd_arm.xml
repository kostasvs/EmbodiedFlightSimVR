<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>

  <path>mfd_arm.ac</path>

  <!-- *************Text*************** -->
  <model>
    <name>text3dEADI</name>
    <path>Aircraft/Mirage-2000/Models/Interior/Instruments/mfd/mfd_3dtextARM.xml</path>
    <offsets>
      <x-m>-0.008</x-m>
      <y-m> 0.000</y-m>
      <z-m> 0.000</z-m>
      <pitch-deg>0</pitch-deg>
    </offsets>
    <condition>
      <equals>
        <property>/instrumentation/mfd/modeL</property>
