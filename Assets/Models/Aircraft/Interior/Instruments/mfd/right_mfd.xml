  <!-- __________________ Buttons _____________________-->
  <!--Pages-->
  <animation>
    <type>pick</type>
    <object-name>right_mfd.bt-b1</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
      <binding>
        <command>property-adjust</command>
        <property>/instrumentation/mfd/modeR</property>
        <step>1</step>
        <min>0</min>
        <max>5</max>
        <wrap>true</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>right_mfd.bt-b2</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
      <binding>
        <command>nasal</command>
        <script>mirage2000.nav_src_set();</script>
        <condition>
          <equals>
            <property>/instrumentation/mfd/modeR</property>
            <value>0</value>
          </equals>
        </condition>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>nav_src_mode</tooltip-id>
        <label>Set Navigation Source</label>
      </binding>
    </hovered>
  </animation>

